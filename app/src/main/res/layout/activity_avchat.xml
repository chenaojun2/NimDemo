<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nimdem.AVChatActivity">




    <com.netease.nimlib.sdk.avchat.video.AVChatSurfaceViewRenderer
        android:id="@+id/tvr"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



        <com.netease.nimlib.sdk.avchat.video.AVChatSurfaceViewRenderer
            android:id="@+id/tvr_friendd"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/bg"/>

    <TextView
        android:id="@+id/state"
        android:text="视频通话页面"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Chronometer
        android:id="@+id/avchat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/hangup"/>

    <Button
        android:id="@+id/hangup"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/avchat_refuse_bg_normal"
        android:text="挂断"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/video_close"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/hangup"
        android:background="@drawable/avchat_refuse_bg_normal"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="关闭视频"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/switc"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/video_close"
        android:background="@drawable/avchat_refuse_bg_normal"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="切换视频"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/audio_close"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/hangup"
        android:background="@drawable/avchat_refuse_bg_normal"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="关闭音频"
        android:textColor="@color/white"/>


</RelativeLayout>
